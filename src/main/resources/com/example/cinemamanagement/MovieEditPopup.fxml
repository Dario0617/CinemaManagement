<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.MovieEditPopupController"
      spacing="10" alignment="CENTER">

    <Label text="Nom du film"/>
    <TextField fx:id="movieNameField"/>

    <Label text="Détails"/>
    <TextField fx:id="movieDetailsField"/>

    <Label text="Genre"/>
    <ComboBox fx:id="movieGenderComboBox"/>

    <Label text="Date de sortie"/>
    <DatePicker fx:id="movieYearDatePicker"/>

    <Label text="Durée (minutes)"/>
    <TextField fx:id="movieDurationField"/>

    <Button text="Enregistrer" onAction="#updateMovie"/>
</VBox>
